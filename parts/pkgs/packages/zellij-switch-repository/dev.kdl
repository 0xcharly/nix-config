        pane command="fish"
        pane {
            pane command="fish"
            pane expanded=true {
                plugin location="file:/Users/delay/code/github.com/0xcharly/nix-config/parts/pkgs/packages/zellij-switch-repository/target/wasm32-wasip1/release/zellij-switch-session.wasm"

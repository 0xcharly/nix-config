        bind "Ctrl w" {
            Run "fish" "/Users/delay/code/github.com/0xcharly/nix-config/parts/pkgs/packages/zellij-switch-repository/select.fish" {
                close_on_exit true
                floating true
                cwd "/Users/delay/code"
            }
        }
    }
    tmux {
        bind "r" {
            LaunchOrFocusPlugin "file:/Users/delay/code/github.com/0xcharly/nix-config/parts/pkgs/packages/zellij-switch-repository/target/wasm32-wasip1/release/zellij-switch-session.wasm" {
